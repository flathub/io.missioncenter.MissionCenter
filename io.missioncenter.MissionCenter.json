{
  "app-id": "io.missioncenter.MissionCenter",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "missioncenter",
  "build-options": {
    "no-debuginfo": true,
    "append-path": "/app/rust-toolchain-glibc/cargo/bin",
    "env": {
      "RUSTUP_HOME": "/app/rust-toolchain-glibc/rustup",
      "RUST_BACKTRACE": "full"
    }
  },
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=shm",
    "--device=all",
    "--socket=wayland",
    "--talk-name=org.freedesktop.Flatpak",
    "--talk-name=org.gnome.Settings",
    "--system-talk-name=org.freedesktop.systemd1",
    "--system-talk-name=org.freedesktop.NetworkManager",
    "--filesystem=xdg-data/flatpak/exports/share:ro",
    "--filesystem=/var/lib/flatpak/exports/share:ro",
    "--filesystem=xdg-data/flatpak/app:ro",
    "--filesystem=/var/lib/flatpak/app:ro",
    "--filesystem=/snap:ro",
    "--filesystem=/var/lib/snapd:ro",
    "--env=XDG_DATA_DIRS=/app/share:/usr/share:/usr/share/runtime/share:/run/host/user-share:/run/host/share:/var/lib/flatpak/exports/share:/var/lib/snapd/desktop:~/.local/share/flatpak/exports/share",
    "--env=LD_PRELOAD="
  ],
  "cleanup": [
    "/sbin",
    "/etc",
    "/sbin",
    "/include",
    "/lib/pkgconfig",
    "/lib/python*",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "build-tools",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir rootfs-glibc && cd rootfs-glibc && tar xf ../ubuntu-14.04-*.tar.zst && rm ../ubuntu-14.04-*.tar.zst",
        "ln -sf /opt/gcc/bin/gcc rootfs-glibc/usr/bin/cc",
        "",
        "mv gcc-glibc/binutils/bin/as rootfs-glibc/usr/bin/",
        "mv gcc-glibc/binutils/lib/libbfd-2.43.1.so rootfs-glibc/usr/lib/$(arch)-linux-gnu/",
        "mv gcc-glibc/binutils/lib/libopcodes-2.43.1.so rootfs-glibc/usr/lib/$(arch)-linux-gnu || true",
        "mv gcc-glibc/binutils/lib/libsframe.so.1 rootfs-glibc/usr/lib/$(arch)-linux-gnu/",
        "rm -rf gcc-glibc/binutils",
        "",
        "rm rootfs-glibc/usr/share/vim/vimfiles",
        "cp -ar gcc-glibc/cmake/usr rootfs-glibc/",
        "cp -ar gcc-glibc/cmake/usr/* /app/",
        "rm -rf gcc-glibc/cmake",
        "",
        "ln -sf /opt/gcc/mold/usr/bin/mold rootfs-glibc/usr/bin/ld",
        "",
        "mkdir rootfs-musl && cd rootfs-musl && tar xf ../alpine-*.tar.zst && rm ../alpine-*.tar.zst",
        "ln -sf /opt/gcc/bin/gcc rootfs-musl/usr/bin/cc",
        "",
        "mv rootfs-musl/usr/bin/ar rootfs-musl/usr/bin/ar.orig",
        "mv musl-ar rootfs-musl/usr/bin/ar",
        "rm rootfs-musl/usr/bin/ld && mv musl-ld rootfs-musl/usr/bin/ld",
        "",
        "mv gcc-musl/binutils/bin/as rootfs-musl/usr/bin/",
        "mv gcc-musl/binutils/lib/libbfd-2.43.1.so rootfs-musl/usr/lib/",
        "mv gcc-musl/binutils/lib/libopcodes-2.43.1.so rootfs-musl/usr/lib/ || true",
        "mv gcc-musl/binutils/lib/libsframe.so.1 rootfs-musl/usr/lib/",
        "rm -rf gcc-musl/binutils",
        "",
        "cp -ar gcc-musl/cmake/usr rootfs-musl/ && rm -rf gcc-musl/cmake",
        "",
        "ln -sf libgbm.so.1 rootfs-musl/usr/lib/libgcc_s.so",
        "ln -sf /usr/lib/libgbm.so.1 gcc-musl/lib64/libgcc_s.so",
        "",
        "mv * /app/"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://missioncenter.io/build-tools/ubuntu-14.04-x86_64_r4.tar.zst",
          "sha256": "fe6621b3d7c29ecf410df0e31a0184fb7653ca6e35fb8c9fe1edeb1d804eb585",
          "only-arches": [
            "x86_64"
          ]
        },
        {
          "type": "file",
          "url": "https://missioncenter.io/build-tools/alpine-3.11-x86_64_r1.tar.zst",
          "sha256": "02c49c10bf53365f026fb8764f9f1d1ed6aa8bac75ea5f089de833bc1da41569",
          "only-arches": [
            "x86_64"
          ]
        },
        {
          "type": "archive",
          "url": "https://missioncenter.io/build-tools/rust-toolchain-glibc-1.84.1-x86_64.tar.zst",
          "dest": "rust-toolchain-glibc",
          "sha256": "c88e9461ec1698538d2fbeceb1fa66a7c80d270c0d59950d16a20ef6dc098303",
          "only-arches": [
            "x86_64"
          ]
        },
        {
          "type": "archive",
          "url": "https://missioncenter.io/build-tools/rust-toolchain-musl-1.84.1-x86_64.tar.zst",
          "dest": "rust-toolchain-musl",
          "sha256": "8cf93ecaf142ff8a3778fc8d288333d4bd2c808afa0e6e34bf47e2d70f545516",
          "only-arches": [
            "x86_64"
          ]
        },
        {
          "type": "archive",
          "url": "https://missioncenter.io/build-tools/gcc-10-glibc-x86_64.tar.zst",
          "dest": "gcc-glibc",
          "sha256": "1a21103c0cfeb891fe9aae688b5e039f2016c4425917af1129b4317cebcc6b1c",
          "only-arches": [
            "x86_64"
          ]
        },
        {
          "type": "archive",
          "url": "https://missioncenter.io/build-tools/gcc-10-musl-x86_64.tar.zst",
          "dest": "gcc-musl",
          "sha256": "19f68cb76025cf0d1147c5240a6999bc34e0ec50af3248950e335da403657748",
          "only-arches": [
            "x86_64"
          ]
        },
        {
          "type": "file",
          "url": "https://missioncenter.io/build-tools/ubuntu-14.04-aarch64_r4.tar.zst",
          "sha256": "78ae2fbc2e9d4f78287748e4183111f98c11a2ab2f0665f187702395fe29039d",
          "only-arches": [
            "aarch64"
          ]
        },
        {
          "type": "file",
          "url": "https://missioncenter.io/build-tools/alpine-3.11-aarch64_r1.tar.zst",
          "sha256": "558d87fefd65175d50dccfd2f79ce583a232297822809dd0bee92925e875efa4",
          "only-arches": [
            "aarch64"
          ]
        },
        {
          "type": "archive",
          "url": "https://missioncenter.io/build-tools/rust-toolchain-glibc-1.84.1-aarch64.tar.zst",
          "dest": "rust-toolchain-glibc",
          "sha256": "7163f6c75deac4e7956c095b727de244bede5b5d201c289a9fe93be8a1d2e06f",
          "only-arches": [
            "aarch64"
          ]
        },
        {
          "type": "archive",
          "url": "https://missioncenter.io/build-tools/rust-toolchain-musl-1.84.1-aarch64.tar.zst",
          "dest": "rust-toolchain-musl",
          "sha256": "d985d1f077fcdd41a636a0f143725a0ba52b95e7ad70f7e53fe5c46fb69082f5",
          "only-arches": [
            "aarch64"
          ]
        },
        {
          "type": "archive",
          "url": "https://missioncenter.io/build-tools/gcc-10-glibc-aarch64.tar.zst",
          "dest": "gcc-glibc",
          "sha256": "53b37fb98c6fcd576bc058b6f93cc89364456099479e8a9d5af6ffd34ebb3aea",
          "only-arches": [
            "aarch64"
          ]
        },
        {
          "type": "archive",
          "url": "https://missioncenter.io/build-tools/gcc-10-musl-aarch64.tar.zst",
          "dest": "gcc-musl",
          "sha256": "53ebfe827209387261d7e94661e0129abe17cffd877c712b100fb36ef40bf551",
          "only-arches": [
            "aarch64"
          ]
        },
        {
          "type": "file",
          "path": "musl-ar"
        },
        {
          "type": "file",
          "path": "musl-ld"
        }
      ],
      "cleanup": [
        "*"
      ]
    },
    {
      "name": "blueprint-compiler",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler/-/archive/v0.16.0/blueprint-compiler-v0.16.0.tar.bz2",
          "sha256": "77a5d593f433c8ca70a05390532cd186c60944cfa6bcd39296c1c2597a7a50fc"
        }
      ],
      "cleanup": [
        "*"
      ]
    },
    {
      "name": "missioncenter",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": [
        "-Dbuildtype=release",
        "-Db_lto=true",
        "-Dflatpak=true",
        "-Dskip-codegen=true",
        "-Dcargo_env='CARGO_HOME=/run/build/missioncenter/cargo'"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.com/mission-center-devs/mission-center.git",
          "commit": "fae4f7c05d81239aed66ec066148d86b141b747c",
        },
        {
          "type": "inline",
          "contents": "[source.vendored-sources]\ndirectory = \"cargo/vendor\"\n\n[source.crates-io]\nreplace-with = \"vendored-sources\"\n",
          "dest": ".cargo",
          "dest-filename": "config.toml"
        },
        "cargo-sources.json"
      ],
      "modules": [
        {
          "name": "spawner",
          "buildsystem": "simple",
          "build-commands": [
            "rustc -C opt-level=3 -C lto=true -C strip=debuginfo -C codegen-units=1 src/magpie_client/spawner.rs",
            "install -v -p -m 755 spawner /app/bin/missioncenter-spawner"
          ],
          "sources": [
            {
              "type": "git",
              "url": "https://gitlab.com/mission-center-devs/mission-center.git",
              "commit": "fae4f7c05d81239aed66ec066148d86b141b747c",
            },
          ]
        },
        {
          "name": "magpie",
          "buildsystem": "simple",
          "build-commands": [
            "rm -rf subprojects/magpie/target",
            "mkdir -p subprojects/magpie/target/release/build/native && cp -ar nvtop-* subprojects/magpie/target/release/build/native/",
            "/app/bin/proot -b /app/rust-toolchain-glibc:/opt/rust -b /app/gcc-glibc:/opt/gcc -b $PWD:/build-dir -R /app/rootfs-glibc /bin/sh -c 'cd /build-dir/subprojects/magpie && env PATH=/opt/rust/cargo/bin:/opt/gcc/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin env RUSTUP_HOME=/opt/rust/rustup cargo build --offline --release --features=skip-codegen'",
            "install -v -p -m 755 subprojects/magpie/target/release/magpie /app/bin/missioncenter-magpie-glibc",
            "",
            "rm -rf subprojects/magpie/target",
            "mkdir -p subprojects/magpie/target/release/build/native && cp -ar nvtop-* subprojects/magpie/target/release/build/native/",
            "/app/bin/proot -b /app/rust-toolchain-musl:/opt/rust -b /app/gcc-musl:/opt/gcc -b $PWD:/build-dir -R /app/rootfs-musl /bin/sh -c 'cd /build-dir/subprojects/magpie && env PATH=/opt/rust/cargo/bin:/opt/gcc/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin env RUSTUP_HOME=/opt/rust/rustup cargo build --offline --release --features=skip-codegen'",
            "install -v -p -m 755 subprojects/magpie/target/release/magpie /app/bin/missioncenter-magpie-musl",
            "",
            "sh -c 'cd subprojects/magpie/platform-linux/hwdb && ./generate_hwdb.py -o . 20-pci-vendor-model.hwdb 20-usb-vendor-model.hwdb'",
            "mkdir /app/share/missioncenter/ && mv subprojects/magpie/platform-linux/hwdb/hw.db /app/share/missioncenter/"
          ],
          "sources": [
            {
              "type": "git",
              "url": "https://gitlab.com/mission-center-devs/mission-center.git",
              "commit": "fae4f7c05d81239aed66ec066148d86b141b747c",
            },
            {
              "type": "archive",
              "url": "https://github.com/Syllo/nvtop/archive/f901275e5b922835e9cf0301f873600bbdb9753b.tar.gz",
              "sha256": "76b8c4dafdcc0d66b6dc7329230b1e4656f0bc0d474b99ccd977c0dddd7c019d",
              "dest": "nvtop-f901275e5b922835e9cf0301f873600bbdb9753b"
            },
            {
              "type": "shell",
              "commands": [
                "cd nvtop-* && find ../subprojects/magpie/platform-linux/3rdparty/nvtop/patches -type f -iname \"*.patch\" -exec sh -c 'patch -p1 < {}' \\;"
              ]
            },
            {
              "type": "inline",
              "contents": "[source.vendored-sources]\ndirectory = \"../../cargo/vendor\"\n\n[source.crates-io]\nreplace-with = \"vendored-sources\"\n\n[target.x86_64-unknown-linux-musl]\nrustflags = [ '-C', 'target-feature=-crt-static', '-C', 'link-args=-L/opt/gcc/lib/gcc/x86_64-unknown-linux-musl/10.5.0 -lgcc -lgcc_eh' ]\n\n[target.aarch64-unknown-linux-musl]\nrustflags = [ '-C', 'target-feature=-crt-static', '-C', 'link-args=-L/opt/gcc/lib/gcc/aarch64-unknown-linux-musl/10.5.0 -lgcc -lgcc_eh' ]\n",
              "dest": "subprojects/magpie/.cargo",
              "dest-filename": "config.toml"
            },
            "cargo-sources-magpie.json"
          ],
          "modules": [
            {
              "name": "proot",
              "buildsystem": "simple",
              "build-commands": [
                "make -C src loader.elf build.h",
                "make -C src proot",
                "install -v -p -m 755 src/proot /app/bin/proot"
              ],
              "sources": [
                {
                  "type": "git",
                  "url": "https://github.com/proot-me/proot.git",
                  "tag": "v5.4.0",
                  "commit": "bd5a5f63d72f8210d8cee76195eb9f0749e5bd70"
                }
              ],
              "modules": [
                {
                  "name": "libarchive",
                  "buildsystem": "autotools",
                  "config-opts": [
                    "--disable-bsdcat",
                    "--disable-bsdcpio",
                    "--disable-bsdtar"
                  ],
                  "sources": [
                    {
                      "type": "archive",
                      "url": "https://libarchive.org/downloads/libarchive-3.6.2.tar.xz",
                      "sha256": "9e2c1b80d5fbe59b61308fdfab6c79b5021d7ff4ff2489fb12daf0a96a83551d"
                    }
                  ],
                  "cleanup": [
                    "*"
                  ]
                },
                {
                  "name": "libtalloc",
                  "buildsystem": "autotools",
                  "sources": [
                    {
                      "type": "archive",
                      "url": "https://www.samba.org/ftp/talloc/talloc-2.4.1.tar.gz",
                      "sha256": "410a547f08557007be0e88194f218868358edc0ab98c98ba8c167930db3d33f9"
                    }
                  ],
                  "cleanup": [
                    "*"
                  ]
                }
              ],
              "cleanup": [
                "*"
              ]
            }
          ]
        }
      ]
    }
  ]
}
